<?xml version="1.0"?>
<ruleset name="PHP 7.0 Compatibility">
    <description>Ensure code is compatible with PHP 7.0</description>

    <!-- Scan the src and tests directories -->
    <file>src</file>
    <file>tests</file>

    <!-- Use the PHPCompatibility standard -->
    <!-- Note: This requires 'phpcompatibility/php-compatibility' to be installed via Composer -->
    <!-- Usage: ./vendor/bin/phpcs -->
    <rule ref="PHPCompatibility"/>

    <!-- Check specifically for PHP 7.0 compatibility -->
    <config name="testVersion" value="7.0"/>
</ruleset>
